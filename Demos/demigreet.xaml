<Window Name="mainWindow" Title="Greetings" Width="300" Height="250" WindowStartupLocation="CenterScreen">
  <StackPanel>
    <TextBlock Text="Your Name" Margin="5" />
    <TextBox Name="nameEntry" Text="Owner" Margin="5, 0, 5, 0"/>
    <TextBlock Text="Your Region" Margin="5" />
    <ComboBox Name="regionEntry" SelectedIndex="1" Margin="5, 0, 5, 0">
      <ComboBoxItem>East</ComboBoxItem>
      <ComboBoxItem>West</ComboBoxItem>
      <ComboBoxItem>North</ComboBoxItem>
      <ComboBoxItem>South</ComboBoxItem>    
    </ComboBox>
    <CheckBox Name="respectEntry" Content="Respect" IsChecked="true" Margin="10"/>
    <TextBlock Name="outputBlock" FontWeight="Bold" FontStyle="Italic" HorizontalAlignment="Center" Margin="5" />
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <Button Name="actionButton" Content="Action" Width="60" Margin="5" IsDefault="true"/>
    </StackPanel>
  </StackPanel>
</Window>




